<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
	<info organisation="${ivy.artifact.group}" module="${ivy.artifact.id}" revision="${project.revision}"/>

	<configurations>
		<conf name="default_internal"/>
		<conf name="default_external"/>
		<conf name="default" extends="default_internal, default_external"/>
		<conf name="test" visibility="private"/>
		<conf name="source"/>
	</configurations>

	<publications>
		<artifact name="${ivy.artifact.id}" type="jar" conf="default"/>
		<artifact name="${ivy.artifact.id}" m:classifier="sources" type="source" ext="jar" conf="source"/>
	</publications>

	<dependencies defaultconf="default_external->default">
		<!--  external dependencies -->
		<dependency org="commons-logging" name="commons-logging" rev="1.1.3" transitive="false" changing="false" conf="default_external->default"/>

		<!-- testing dependencies -->
		<dependency org="junit" name="junit" rev="4.10" transitive="false" conf="test->default"/>
		<dependency org="org.mockito" name="mockito-all" rev="1.10.19" conf="test->default"/>
		<dependency org="org.powermock" name="powermock-module-junit4" rev="1.6.4" conf="test->default" />
		<dependency org="org.powermock" name="powermock-api-mockito" rev="1.6.4" conf="test->default" />
	</dependencies>
</ivy-module>
